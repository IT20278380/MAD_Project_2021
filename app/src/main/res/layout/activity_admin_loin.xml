<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin_Loin">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/appname"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/green"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:logo="@drawable/ic_baseline_computer_24"
        app:title="@string/app_name"
        app:titleMarginStart="40dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="125dp"
        android:layout_marginTop="68dp"
        android:contentDescription="@string/C.reApp_name"
        android:src="@mipmap/image_foreground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Ad_Name"
        android:layout_width="182dp"
        android:layout_height="49dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="220dp"
        android:text="@string/log_title"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="240dp" />

    <TextView
        android:id="@+id/A_log.name"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="290dp"
        android:text="User Name :-"
        android:textColor="#000000"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="315dp" />

    <TextView
        android:id="@+id/A_Log_Pass"
        android:layout_width="119dp"
        android:layout_height="34dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="390dp"
        android:text="@string/log_Pw"
        android:textColor="#000000"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="407dp" />

    <EditText
        android:id="@+id/A_log_En_name"
        android:layout_width="287dp"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="320dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="345dp" />

    <EditText
        android:id="@+id/A_log_Epass"
        android:layout_width="288dp"
        android:layout_height="49dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="415dp"
        android:ems="10"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="441dp" />

    <TextView
        android:id="@+id/A_log.copy"
        android:layout_width="115dp"
        android:layout_height="27dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="620dp"
        android:text="@string/log_cop"
        android:textColor="#000000"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="652dp" />

    <TextView
        android:id="@+id/A_go_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="570dp"
        android:text="@string/log_link"
        android:textColor="#2196F3"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="584dp" />

    <Button
        android:id="@+id/A_but"
        android:layout_width="176dp"
        android:layout_height="49dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="490dp"
        android:background="@color/green"
        android:text="@string/log_but"
        android:textColor="@color/white"
        android:textSize="19sp"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="506dp" />

</RelativeLayout>