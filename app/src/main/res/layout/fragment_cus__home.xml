<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Cus_Home">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:text="Brand New Computers"
            android:textColor="@color/black"
            android:textSize="20dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/home_list100"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:layout_marginStart="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="Brand New Lapops"
            android:textColor="@color/black"
            android:textSize="20dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/home_lep100"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:layout_marginStart="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="Computer Accessories"
            android:textColor="@color/black"
            android:textSize="20dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/home_ass00"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:layout_marginStart="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="Laptop Accessories"
            android:textColor="@color/black"
            android:textSize="20dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/home_ass11"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:layout_marginStart="5dp" />


    </LinearLayout>

</FrameLayout>